// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Market {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Product {
  id          Int    @id @default(autoincrement())
  name        String
  brand       String
  size        Float
  measurement String

  @@unique([name, brand])
}

model Price {
  id           Int            @id @default(autoincrement())
  price        Float
  date         DateTime
  marketId     Int
  productId    Int
  ShoppingList ShoppingList[]
}

model ShoppingList {
  id        Int   @id @default(autoincrement())
  priceList Price @relation(fields: [priceId], references: [id])
  quantity  Float
  priceId   Int
}

model User {
  id Int @id @default(autoincrement())

  email    String @unique
  password String

  name String
}
