generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:docker@localhost:5432/postgres?schema=public"
}

model Market {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Product {
  id          Int    @id @default(autoincrement())
  name        String
  brand       String
  categoryId  Int
  size        Float
  measurement String

  @@unique([name, brand])
}

model Category {
  id   Int    @id @default(autoincrement())
  name String
}

model Price {
  id           Int            @id @default(autoincrement())
  price        Float
  date         DateTime
  marketId     Int
  productId    Int
  ShoppingList ShoppingList[]
}

model ShoppingList {
  id        Int   @id @default(autoincrement())
  priceList Price @relation(fields: [priceId], references: [id])
  quantity  Float
  priceId   Int
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
}
